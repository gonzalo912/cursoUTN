<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="titulo" placeholder="Título">
                </div>
                <div class="form-group">
                    <textarea name="subtitulo" class="form-control" placeholder="Subtítulo" cols="30"
                        rows="1"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="cuerpo" class="form-control" placeholder="Cuerpo" cols="30" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    AGREGAR
                </button>
            </form>
        </div>
        {{#if error}}
        <h5>mensaje: {{message}}</h5>
        {{/if}}
    </div>
</div>